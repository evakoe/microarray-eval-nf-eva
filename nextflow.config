docker.enabled = true
process.container= ''

manifest {
    name                                  = 'microarray-eval-nf'
    version                               = '0.0.2'
    description                           = 'Nextflow pipeline to eval microarray chips'
    author                                = 'Martin Eberle, Sebastian SchÃ¶nherr, Lukas Forer'
    homePage                              = 'https://github.com/seppinho/exome-cnv-nf'
    mainScript                            = 'main.nf'
    nextflowVersion                       = '!>=21.04.0'
}

// Global default params, used in configs
params {

    //Required inputs
    project                  = null
    sequence_data            = null
    dosage_data              = null
    strand_data              = null
    outdir                   = null
    // required when using MIS2
    apply_mis_fix            = false
    remove_seq_filters       = false
    chip_line_selection      = 0
    imputation_host          = null
    imputation_token         = null
    imputation_panel         = null
    imputation_population    = null
    imputation_build         = null
    sequence_build           = null
    exec_rsq_steps           = true
}
process.container                 = 'genepi/microarray-eval:latest'

profiles {

    debug { process.beforeScript          = 'echo $HOSTNAME' }

    docker {
        docker.enabled                    = true
        docker.userEmulation              = true
        singularity.enabled               = false
    }

    test      {
         includeConfig 'conf/test.config'
    }
    mtdna     {
         includeConfig 'conf/mtdna.config'
    }


}
